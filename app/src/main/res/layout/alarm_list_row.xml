<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:descendantFocusability="blocksDescendants"
    >

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/checkbox_active"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/menu"
        android:src="@drawable/ic_action_menu"
        android:id="@+id/ib_menu"
        android:background="#00000000"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkbox_active"
        android:layout_toEndOf="@id/checkbox_active"
        android:layout_toLeftOf="@id/ib_menu"
        android:layout_toStartOf="@id/ib_menu"
        android:layout_alignParentTop="true"
        android:id="@+id/ll_tophalf"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/text_time"
            android:textAppearance="@android:style/TextAppearance.Large"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_time"
            android:layout_toEndOf="@id/text_time"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:textAlignment="gravity"
            android:id="@+id/text_alarm_label"
            />

    </RelativeLayout>


    <!-- The schedule and message -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkbox_active"
        android:layout_toEndOf="@id/checkbox_active"
        android:layout_toLeftOf="@id/ib_menu"
        android:layout_toStartOf="@id/ib_menu"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/ll_tophalf"
        android:id="@+id/ll_bottomhalf"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/text_alarm_schedule"
            android:textAppearance="@android:style/TextAppearance.Small"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_alarm_schedule"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/ic_message"
            android:contentDescription="@string/message"
            android:visibility="invisible"
            android:id="@+id/iv_message"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_message"
            android:layout_toEndOf="@id/iv_message"
            android:layout_below="@id/text_alarm_schedule"
            android:layout_alignTop="@id/iv_message"
            android:id="@+id/text_message"
            android:text=""
            />
    </RelativeLayout>


</RelativeLayout>